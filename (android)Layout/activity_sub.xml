<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SubActivity">

    <!-- 원금 균등 상환 방식 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="원금 균등 상환"
                android:textColor="#000000"
                android:textSize="12pt"
                android:textStyle="bold" />
            <TextView
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/holo_blue_bright" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="right">

            <Button
                android:id="@+id/btn_principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20pt"
                android:background="@android:color/holo_blue_light"
                android:text="자세히"
                android:textSize="8pt" />
        </LinearLayout>
    </LinearLayout>
    <!-- 원금 균등 상환 방식 (이자비용과 원금) -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="이자비용 : "
            android:textSize="8pt"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/text_interest_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 + "
            android:textSize="8pt"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원금 : "
            android:textSize="8pt"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/text_Repayment_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 "
            android:textSize="8pt"
            android:textColor="#000000"/>

    </LinearLayout>

    <!-- 원금 균등 상환 방식 (총 상환 금액) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="총 상환금액 : "
            android:textSize="8pt"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/text_Sum_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 "
            android:textSize="8pt"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/holo_purple" />
    </LinearLayout>

    <!-- 원리금 균등 상환 방식 -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원리금 균등 상환"
                android:layout_marginLeft="20dp"
                android:textSize="12pt"
                android:textStyle="bold"
                android:textColor="#000000"
                />

            <TextView
                android:orientation="vertical"
                android:layout_width="190dp"
                android:layout_height="7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/holo_blue_bright" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="right">

            <Button
                android:id="@+id/btn_wonligeum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:text="자세히"
                android:layout_marginRight="20pt"
                android:textSize="8pt"
                />

        </LinearLayout>

    </LinearLayout>

    <!-- 원리금 균등 상환 방식 (이자비용과 원금) -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이자비용 : "
            android:textSize="8pt"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/text_interest_wonligeum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 + "
            android:textSize="8pt"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원금 : "
            android:textSize="8pt"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_Repayment_wonligeum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 "
            android:textSize="8pt"
            android:textColor="#000000" />

    </LinearLayout>

    <!-- 원리금 균등 상환 방식 (총 상환 금액) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="총 상환금액 : "
            android:textSize="8pt"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/text_Sum_wonligeum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 "
            android:textSize="8pt"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/holo_purple" />
    </LinearLayout>
    <!-- 원금 만기 일시 상환 방식 -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원금 만기 일시 상환"
                android:layout_marginLeft="20dp"
                android:textSize="12pt"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                android:orientation="vertical"
                android:layout_width="225dp"
                android:layout_height="7dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/holo_blue_bright" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
        <Button
            android:id="@+id/btn_maturity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="@android:color/holo_blue_light"
            android:text="자세히"
            android:layout_marginRight="20pt"
            android:textSize="8pt"
            />
        </LinearLayout>
    </LinearLayout>
    <!-- 원금 만기 일시 상환 방식 (이자비용과 원금) -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="이자비용 : "
            android:textSize="8pt"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_interest_maturity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 + "
            android:textSize="8pt"
            android:textColor="#000000" />

        <!-- 원금 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원금 : "
            android:textSize="8pt"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_Repayment_maturity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 "
            android:textSize="8pt"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 원금 만기 일시 상환 방식 (총 상환금액) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="총 상환금액 : "
            android:textSize="8pt"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/text_Sum_maturity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 "
            android:textSize="8pt"
            android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>