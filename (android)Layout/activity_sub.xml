<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10pt"
    tools:context=".SubActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원금 균등 상환 방식"
            android:textSize="10pt"
            />
        <!--원금 버튼-->
        <Button
            android:id="@+id/btn_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:text="자세히"
            android:textSize="8pt"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이자비용"
            android:textSize="10pt" />

        <!--원금 이자비용 아이디-->
        <TextView
            android:id="@+id/text_interest_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 / "
            android:textSize="10pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상환 금액"
            android:textSize="10pt" />

        <!--원금 상환금액 아이디-->
        <TextView
            android:id="@+id/text_Repayment_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 "
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원리금 균등 상환 방식"
            android:textSize="10pt"
            />
        <!--원리금 버튼-->
        <Button
            android:id="@+id/btn_wonligeum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히"
            android:layout_marginLeft="5pt"
            android:textSize="8pt"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이자비용"
            android:textSize="10pt" />

        <!--원리금 이자비용 아이디-->
        <TextView
            android:id="@+id/text_interest_wonligeum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 / "
            android:textSize="10pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상환 금액"
            android:textSize="10pt" />

        <!--원리금 상환금액 아이디-->
        <TextView
            android:id="@+id/text_Repayment_wonligeum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 "
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="만기 일시 상환 방식"
            android:textSize="10pt"
            />
        <!--만기 버튼-->
        <Button
            android:id="@+id/btn_maturity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히"
            android:layout_marginLeft="5pt"
            android:textSize="8pt"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이자비용"
            android:textSize="10pt" />

        <!--만기 이자비용 아이디-->
        <TextView
            android:id="@+id/text_interest_maturity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 / "
            android:textSize="10pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상환 금액"
            android:textSize="10pt" />

        <!--만기 상환금액 아이디-->
        <TextView
            android:id="@+id/text_Repayment_maturity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 "
            android:textSize="10pt" />
    </LinearLayout>

</LinearLayout>