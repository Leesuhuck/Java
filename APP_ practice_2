package com.example.my_char;

import androidx.appcompat.app.AppCompatActivity;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

public class MainActivity extends AppCompatActivity {

    Button btn_text,btn_move;

    EditText text, text2, text3;

    String str, btr, ctr, Map;

    double value;



    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        text = findViewById(R.id.text);
        text2 = findViewById(R.id.text2);
        text3 = findViewById(R.id.text3);
        btn_text = findViewById(R.id.btn1);

        btn_text.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Intent intent2 = new Intent(MainActivity.this , MainActivity2.class); //이동경로

                str = text.getText().toString();
                btr = text2.getText().toString();
                ctr = text3.getText().toString();

                value = Double.valueOf(str).doubleValue() + Double.valueOf(btr).doubleValue() + Double.valueOf(ctr).doubleValue(); //실수로 변환 공식
                Map = ""+value; // 문자열로 변환
                str = ""+str;
                btr = ""+btr;
                ctr = ""+ctr;

                intent2.putExtra("value", Map); //값저장
                intent2.putExtra("str", str);
                intent2.putExtra("btr", btr);
                intent2.putExtra("ctr", ctr);

                startActivity(intent2); // 저장한 값과 함께 액티비티 이동



            }
        });
        btn_move = findViewById(R.id.btn_move);
        btn_move.setOnClickListener(new View.OnClickListener() {

            @Override
            public void onClick(View v) {
                Intent intent = new Intent(MainActivity.this , MainActivity2.class);
                startActivity(intent);
            }

        });

        text = findViewById(R.id.text);
        text2 = findViewById(R.id.text2);
        text3 = findViewById(R.id.text3);

    }
}
